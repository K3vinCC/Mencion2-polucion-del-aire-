# Archivo de configuración de entorno
# Copie este archivo como .env y configure los valores apropiados

# Base de datos PostgreSQL
DATABASE_URL=postgresql://usuario:password@localhost:5432/air_quality_db

# Configuración de JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=12

# Configuración de Telegram Bot (para notificaciones)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHAT_ID=your-telegram-chat-id-here

# Configuración de Flask
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_SECRET_KEY=your-flask-secret-key-here

# Configuración de encriptación
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Configuración de CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log